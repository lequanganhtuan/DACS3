<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/backgrounduser"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/frameLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="20dp"
            android:background="@drawable/baseline_circle_24"
            android:src="@drawable/ic_avatar">

        </ImageView>

        <TextView
            android:id="@+id/tvUser"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:text="Pham Quoc Phu"
            android:textColor="#fff"
            android:textSize="25sp"
            android:textStyle="bold">
        </TextView>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/frameLayout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="689dp"
        android:background="#181A20"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:layout_constraintVertical_bias="1.0">

        <Button
            android:layout_marginBottom="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:id="@+id/btnLichsu"
            android:backgroundTint="#1e2229"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left|center_vertical"
            android:textStyle="bold"
            android:textColor="#ffff"
            android:drawablePadding="2dip"
            android:drawableRight="@drawable/ic_right"
            android:drawableLeft="@drawable/ic_history"
            android:text="History"
            tools:ignore="RtlHardcoded" />

        <Button
            android:layout_marginBottom="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/btnSuutap"
            android:backgroundTint="#1e2229"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="#ffff"
            android:gravity="left|center_vertical"
            android:drawableRight="@drawable/ic_right"
            android:drawableLeft="@drawable/ic_collection"
            android:text="collection"
            tools:ignore="RtlHardcoded" />

        <Button
            android:layout_marginBottom="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/btnCaidat"
            android:backgroundTint="#1e2229"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="#ffff"
            android:gravity="left|center_vertical"
            android:drawableRight="@drawable/ic_right"
            android:drawableLeft="@drawable/ic_settings"
            android:text="Setting"
            tools:ignore="RtlHardcoded" />

        <Button
            android:layout_marginBottom="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/btnNgonngu"
            android:backgroundTint="#1e2229"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="#ffff"
            android:gravity="left|center_vertical"
            android:drawableLeft="@drawable/ic_language"
            android:text="language"
            android:drawableRight="@drawable/ic_right"
            tools:ignore="RtlHardcoded" />

        <Button
            android:layout_marginBottom="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/btnYeuThich"
            android:backgroundTint="#1e2229"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="#ffff"
            android:gravity="left|center_vertical"
            android:drawableLeft="@drawable/ic_favourite"
            android:text="favourite"
            android:drawableRight="@drawable/ic_right"
            tools:ignore="RtlHardcoded" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>